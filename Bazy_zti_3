zadanie 1
select imie, nazwisko, data_urodzenia from pracownik;

zadanie 2
selectselect imie, nazwisko, year(now())- year(data_urodzenia) AS wiek_w_latach from pracownik;

zadanie 3
select d.nazwa, count(p.dzial) from pracownik p inner join dzial d on p.dzial=d.id_dzialu group by d.nazwa;

zadanie 4
select k.nazwa_kategori, count(t.kategoria) from kategoria k inner join towar t on k.id_kategori=t.kategoria group by k.nazwa_kategori;

zadanie 5
select k.nazwa_kategori, t.nazwa_towaru from kategoria k inner join towar t on  k.id_kategori=t.kategoria;

select k.nazwa_kategori, GROUP_CONCAT(t.nazwa_towaru) AS nazwa_produktu from kategoria k inner join towar t on k.id_kategori=t.kategoria group by k.nazwa_kategori;

zadanie 6
select id_pracownika, imie, nazwisko, ROUND(avg(pensja),2) AS srednia_pensja from pracownik group by id_pracownika;

Zadanie 7
select id_pracownika, imie, nazwisko, avg(pensja) from pracownik where year(now()) - year(data_zatrudnienia) >= 5 group by id_pracownika;

Zadanie 8
select t.nazwa_towaru, count(p.towar) AS ilosc from zamowienie z inner join pozycja_zamowienia p on z.id_zamowienia=p.zamowienie inner join towar t on p.towar=t.id_towaru group by t.nazwa_towaru order by ilosc desc limit 10;

Zadanie 9
select z.numer_zamowienia, sum(p.ilosc*p.cena) from zamowienie z inner join pozycja_zamowienia p on z.id_zamowienia=p.zamowienie where year(data_zamowienia)=2017 and month(data_zamowienia) between 1 and 3 group by z.numer_zamowienia;

zadanie 10
select p.imie, p.nazwisko, sum(pz.ilosc*pz.cena) AS suma_wartosci from pracownik p inner join zamowienie z on p.id_pracownika=z.pracownik_id_pracownika inner join pozycja_zamowienia pz on z.id_zamowienia=pz.zamowienie group by id_pracownika order by suma_wartosci desc;
